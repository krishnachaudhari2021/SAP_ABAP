REPORT znew_hana_program.

*SELECT   BUYER_GUID        AS BUYER_GUID,
*         GROSS_AMOUNT      AS GROSS_AMOUNT,
*  ROUND( GROSS_AMOUNT, 0 ) AS GROSS_AMOUNT_WITH_ZERO,
*   CEIL( GROSS_AMOUNT )    AS ROUND_AMOUNT
*
*FROM SNWD_SO INTO TABLE @DATA(IT_DATA).
*
*LOOP AT IT_DATA INTO DATA(WA_DATA).
*
*WRITE: / WA_DATA-BUYER_GUID,
*         WA_DATA-GROSS_AMOUNT,
*         WA_DATA-GROSS_AMOUNT_WITH_ZERO,
*         WA_DATA-ROUND_AMOUNT.
*
*ENDLOOP.

*---------------------------------------------------------------------*

*SELECT  BUYER_GUID        AS BUYER_GUID,
*   SUM( GROSS_AMOUNT )    AS GROSS_AMOUNT,
*
*   CASE WHEN SUM( GROSS_AMOUNT ) > 10000 THEN 'HIGH'
*        ELSE 'LOW' END AS AMOUNT_LEVEL
*        FROM SNWD_SO GROUP BY BUYER_GUID
*        INTO TABLE @DATA(IT_DATA).
*
*LOOP AT IT_DATA INTO DATA(WA_DATA).
*
*WRITE: / WA_DATA-buyer_guid,
*         WA_DATA-gross_amount,
*         WA_DATA-amount_level.
*
*ENDLOOP.

*---------------------------------------------------------------------*

*SELECT ORDER_NUMBER AS ORDER_NUMBER,
*  SUM( ITEM_COST ) AS ORDER_ITEM_COST,
*
*CASE WHEN SUM( ITEM_COST ) > 2000 THEN 'HIGH'
*     ELSE 'LOW' END AS AMOUNT_LEVEL
*     FROM ZORD_IT_TAB GROUP BY ORDER_NUMBER
*     INTO TABLE @DATA(IT_ORD).
*
*LOOP AT IT_ORD INTO DATA(WA_ORD).
*
*WRITE: / WA_ORD-order_number,
*         WA_ORD-order_item_cost,
*         WA_ORD-amount_level.
*
*ENDLOOP.

*---------------------------------------------------------------------*

*DATA: IT_MARA TYPE TABLE OF MARA.
*DATA: IS_MARA LIKE LINE OF IT_MARA.
*
*SELECT MATNR, MTART, MBRSH, MEINS FROM MARA
*INTO CORRESPONDING FIELDS OF TABLE @IT_MARA UP TO 100 ROWS.
*
*LOOP AT IT_MARA INTO IS_MARA.
*
*WRITE: / IS_MARA-matnr, IS_MARA-mtart,  IS_MARA-mbrsh, IS_MARA-MEINS.
*
*ENDLOOP.

*---------------------------------------------------------------------*

*SELECT MATNR, MTART, MBRSH, MEINS FROM MARA
*INTO TABLE @DATA(IT_MARA)
*UP TO 10 ROWS.
*
*LOOP AT IT_MARA INTO DATA(IS_MARA).
*
*WRITE: / IS_MARA-matnr, IS_MARA-mtart, IS_MARA-mbrsh, IS_MARA-meins.
*
*ENDLOOP.

*LOOP AT IT_MARA ASSIGNING FIELD-SYMBOL(<FS_MARA>).
*
*WRITE: / <FS_MARA>-MATNR, <FS_MARA>-MBRSH, <FS_MARA>-MEINS, <fs_mara>-matnr.
*
*ENDLOOP.
*
*
*LOOP AT IT_MARA REFERENCE INTO DATA(lo_mara).
*
*WRITE: / lo_mara->matnr, lo_mara->mbrsh,lo_mara->meins,lo_mara->mtart.
*
*ENDLOOP.


