* VALUE EXPRESSION

*TYPES: BEGIN OF str1,
*         emp_id   TYPE num2,
*         emp_name TYPE char10,
*         emp_desi TYPE char15,
*       END OF str1.
*TYPES TT_str1 TYPE TABLE OF str1 WITH DEFAULT KEY.
*
*DATA(it_data) = VALUE TT_str1(
*   ( emp_id = '1' emp_name = 'RAHUL' emp_desi = 'SAP ABAP' )
*   ( emp_id = '2' emp_name = 'GAESH' emp_desi = 'SAP PP'   ) ).
*DATA WA_DATA TYPE STR1.
*
*LOOP AT it_data INTO wa_data.
*  WRITE: / wa_data-emp_id,
*           wa_data-emp_name,
*           wa_data-emp_desi.
*ENDLOOP.

*---------------------------------------------------------------------*

*CORRESPONDING

*TYPES: BEGIN OF EMP_str1,
*         emp_id   TYPE num2,
*         emp_name TYPE char10,
*         emp_desi TYPE char15,
*       END OF EMP_str1,
*LT_DATA TYPE TABLE OF EMP_STR1 WITH DEFAULT KEY.
*
*
*DATA(it_data) = VALUE LT_DATA(
*   ( emp_id = '1' emp_name = 'RAHUL' emp_desi = 'SAP ABAP' )
*   ( emp_id = '2' emp_name = 'GAESH' emp_desi = 'SAP PP'   ) ).
*DATA WA_DATA TYPE EMP_STR1.
*
*DATA(it_data1) = CORRESPONDING LT_DATA( it_data ).
*
*LOOP AT it_data INTO wa_data.
*  WRITE: / wa_data-emp_id,
*           wa_data-emp_name,
*           wa_data-emp_desi.
*ENDLOOP.

*---------------------------------------------------------------------*

*USING # FOR RECORD

*TYPES: BEGIN OF EMP_str1,
*         emp_id   TYPE num2,
*         emp_name TYPE char10,
*         emp_desi TYPE char15,
*       END OF EMP_str1.
*
*DATA: IT_DATA TYPE TABLE OF EMP_STR1.
*
*IT_DATA = VALUE #( ( EMP_ID = '1' EMP_NAME = 'KRISHNA' EMP_DESI = 'SAP ABAP') ).
*
*DATA WA_DATA TYPE EMP_STR1.
*
*LOOP AT it_data INTO wa_data.
*  WRITE: / wa_data-emp_id,
*           wa_data-emp_name,
*           wa_data-emp_desi.
*ENDLOOP.

*---------------------------------------------------------------------*
*USING TABLE TYPE TO CREATE INTERNAL TABLE WITH DATA

TYPES: BEGIN OF str1,
         emp_id   TYPE num2,
         emp_name TYPE char10,
         emp_desi TYPE char15,
       END OF str1.
TYPES TT_str1 TYPE TABLE OF str1 WITH DEFAULT KEY.

DATA(it_data) = VALUE TT_str1(
   ( emp_id = '1' emp_name = 'RAHUL' emp_desi = 'SAP ABAP' )
   ( emp_id = '2' emp_name = 'GAESH' emp_desi = 'SAP PP'   ) ).
DATA WA_DATA TYPE STR1.

*READ OPERATION
*READ TABLE IT_DATA INTO DATA(LS_EMP) WITH KEY EMP_ID = '2'.

*USING TABLE OPERATION
DATA(LS_EMP) = IT_DATA[ EMP_ID = '2' ].
WRITE: / LS_EMP-emp_id, LS_EMP-emp_name, LS_EMP-emp_desi.

